#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" --max-old-space-size=8192 "$basedir/../pro_self_extracting_wasm/main.mjs" "$@"
else 
  exec node --max-old-space-size=8192 "$basedir/../pro_self_extracting_wasm/main.mjs" "$@"
fi
